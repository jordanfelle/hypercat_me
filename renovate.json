{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^\\.hugo-version$"],
      "matchStrings": ["(?<currentValue>\\d+\\.\\d+\\.\\d+)"],
      "depNameTemplate": "gohugoio/hugo",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "fileMatch": ["^\\.github/workflows/pre-commit\\.yml$"],
      "matchStrings": ["hugo-version: \"?(?<currentValue>\\d+\\.\\d+\\.\\d+)\"?"],
      "depNameTemplate": "gohugoio/hugo",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v(?<version>.*)$"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["regex"],
      "matchPackageNames": ["gohugoio/hugo"],
      "prBodyNotes": [
        "Note: When Renovate updates the Hugo version, you must manually update `.hugo-archive-checksum` with the SHA256 checksum of the corresponding Hugo archive. See the `build.sh` script for how to compute this checksum."
      ]
    }
  ]
}
